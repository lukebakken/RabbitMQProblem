loopback_users = none

load_definitions = @@PWD@@/definitions.json

auth_mechanisms.1 = PLAIN
auth_mechanisms.2 = AMQPLAIN
auth_mechanisms.3 = EXTERNAL

log.console = true
log.console.level = debug

listeners.tcp.default = 5672
listeners.ssl.default = 5671

management.tcp.port = 15672
management.ssl.port = 15671

management.ssl.certfile   = @@PWD@@/certs/server_shostakovich_certificate.pem
management.ssl.keyfile    = @@PWD@@/certs/server_shostakovich_key.pem
management.ssl.cacertfile = @@PWD@@/certs/ca_certificate.pem

ssl_options.certfile   = @@PWD@@/certs/server_shostakovich_certificate.pem
ssl_options.keyfile    = @@PWD@@/certs/server_shostakovich_key.pem
ssl_options.cacertfile = @@PWD@@/certs/ca_certificate.pem
ssl_options.verify     = verify_peer
ssl_options.fail_if_no_peer_cert = true
